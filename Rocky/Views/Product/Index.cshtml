@model IEnumerable<Rocky.Models.Product>
@{
    ViewData["Title"] = "Product";
}

<h1>Prodcut</h1>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp;Create New Product</a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                       Price
                    </th>
                </tr>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="50%">@obj.Price</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Upsert" asp-route-Id="@obj.Id" class="btn btn-primary"><i class="fas fa-edit"></i> &nbsp; Edit</a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-primary btn-danger mx-2 "><i class="far fa-trash-alt"></i> &nbsp; Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            </thead>
        </table>
    }
    else
    {
        <p>Product is empty</p>
    }

</div>